# Application Settings
APP_NAME=Accountability Platform API
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=info

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=accountability-platform-data

# External API Keys
PROPUBLICA_API_KEY=your-propublica-api-key
OPENSECRETS_API_KEY=your-opensecrets-api-key
FEC_API_KEY=your-fec-api-key
GOVTRACK_API_KEY=your-govtrack-api-key

# AI Configuration
# Use either Anthropic or OpenAI
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
# OR
# AI_PROVIDER=openai
# OPENAI_API_KEY=your-openai-api-key

AI_MODEL=claude-3-5-sonnet-20241022

# Authentication
ADMIN_EMAIL=admin@example.com
JWT_SECRET=your-jwt-secret-key-here-generate-with-openssl-rand-hex-32
SESSION_SECRET=your-session-secret-key-here
MAGIC_LINK_EXPIRY_MINUTES=15
SESSION_EXPIRY_DAYS=7

# Frontend Integration
VERCEL_DEPLOYMENT_URL=https://accountability.vercel.app
REVALIDATE_SECRET=your-revalidate-secret-here
FRONTEND_URL=https://accountability.com

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@accountability.com

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000", "https://accountability.com"]

# Performance Settings
MAX_CONCURRENT_SCRAPES=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
